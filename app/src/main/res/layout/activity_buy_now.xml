<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Buy Now"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Item Details Group -->
            <LinearLayout
                android:id="@+id/itemDetailsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Item Image -->
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Item Image"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <!-- Item Title -->
                <TextView
                    android:id="@+id/itemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center|start"
                    android:text="Item Title"
                    android:textColor="#0F0F0F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Item Price -->
                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center|start"
                    android:text="â‚¹0"
                    android:textColor="#0F0F0F"
                    android:textSize="18sp" />

                <!-- Seller Name -->
                <TextView
                    android:id="@+id/sellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center|start"
                    android:text="Seller: Unknown"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <!-- Delivery Info -->
                <TextView
                    android:id="@+id/deliveryInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center|start"
                    android:text="Estimated delivery: 3-5 business days"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Delivery Location Group -->
            <LinearLayout
                android:id="@+id/deliveryLocationGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemDetailsGroup">

                <!-- Delivery Location Label -->
                <TextView
                    android:id="@+id/deliveryLocationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Location"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Horizontal Layout for Delivery Location and Change Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!-- Delivery Location -->
                    <TextView
                        android:id="@+id/deliveryLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="[Loading...]"
                        android:textColor="#0F0F0F"
                        android:textSize="16sp" />

                    <!-- Change Address Button -->
                    <Button
                        android:id="@+id/changeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#0F0F0F"
                        android:padding="4dp"
                        android:text="Change"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contact Number Group -->
            <LinearLayout
                android:id="@+id/contactNumberGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deliveryLocationGroup">

                <!-- Contact Number Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Contact Number"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Horizontal Layout for Contact Number and Change Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!-- Contact Number Display -->
                    <TextView
                        android:id="@+id/contactNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="[Not set]"
                        android:textColor="#0F0F0F"
                        android:textSize="16sp" />

                    <!-- Change Contact Number Button -->
                    <Button
                        android:id="@+id/changeContactNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#0F0F0F"
                        android:padding="4dp"
                        android:text="Change"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Payment Method Group -->
            <LinearLayout
                android:id="@+id/paymentMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contactNumberGroup">

                <!-- Payment Method Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Payment Method"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Payment Options -->
                <CheckBox
                    android:id="@+id/cashOnDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cash on Delivery"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/creditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Credit Card"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/debitCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Debit Card"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/upi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="UPI"
                    android:textColor="#0F0F0F"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Proceed to Pay Button -->
            <Button
                android:id="@+id/btnProceedToPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#0F0F0F"
                android:text="Proceed to Pay"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paymentMethodGroup" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>